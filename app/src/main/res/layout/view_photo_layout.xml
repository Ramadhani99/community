<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.madega.ramadhani.njootucode.Activity.ViewPhotoLayoutActivity">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/blackBackground">

        <com.github.chrisbanes.photoview.PhotoView
            android:id="@+id/view_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:src="@drawable/olbongo"


             />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="horizontal">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
           >
        <ImageView
            android:id="@+id/backBtnPic"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_margin="4dp"


            android:layout_gravity="center"
            android:src="@drawable/ic_backarrow_white_24dp"/>
        </LinearLayout>
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_more_white_24dp"
            android:layout_gravity="center"

            android:layout_margin="4dp"/>
        </LinearLayout>

    </FrameLayout>

</android.support.constraint.ConstraintLayout>
