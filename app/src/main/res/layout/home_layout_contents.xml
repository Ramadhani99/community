<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/dafault"
    android:layout_marginBottom="8dp"
    android:orientation="vertical"

    >

    <FrameLayout
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="1dp"

        tools:context="com.madega.ramadhani.njootucode.Activity.MainActivity">
        "/>


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/dafault">


            <LinearLayout
                android:id="@+id/post_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp"
                    android:background="@color/dafault"
                   >

                    <android.support.v7.widget.CardView
                        android:id="@+id/cardpostImage"
                        android:visibility="visible"
                        android:layout_width="match_parent"
                        app:cardCornerRadius="12dp"
                        android:elevation="10dp"


                        android:layout_height="wrap_content"
                        android:layout_margin="16dp">

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:id="@+id/default_image"
                                android:layout_width="match_parent"
                                android:layout_height="300dp"

                                android:src="@drawable/ic_insert_photo_black_24dp"
                                android:background="@color/dafault"

                                />
                        <ImageView
                            android:id="@+id/post_image"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:scaleType="fitXY"
                             />

                        </FrameLayout>
                        <ProgressBar
                            android:id="@+id/imageProgressBar"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_gravity="center"/>

                    </android.support.v7.widget.CardView>

                </LinearLayout>
                <View
                    android:id="@+id/imageControl"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:visibility="gone">

                </View>
                <TextView
                    android:id="@+id/posttext"
                    android:background="@color/dafault"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/test"
                    android:textSize="16sp"
                    android:maxLines="3"
                    android:ellipsize="end"
                    android:lineSpacingExtra="3sp"
                    android:padding="8dp"



                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    />

                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:background="@color/dafault"
                    android:gravity="center"
                    android:orientation="horizontal">


                    <ImageView
                        android:id="@+id/likes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="24dp"
                        android:src="@drawable/ic_favorite_border_black_24dp"
                        android:gravity="bottom"

                        android:padding="8dp"


                        android:textAlignment="center" />
                    <TextView
                        android:id="@+id/total_like"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                       android:textSize="14sp"
                        android:text="Comments"
                        android:fontFamily="sans-serif-light"
                        android:textAlignment="center" />


                    <TextView
                        android:id="@+id/comments"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="24dp"
                        android:drawableLeft="@drawable/ic_comment_black_24dp"
                        android:gravity="center"
                        android:drawablePadding="4dp"
                        android:textSize="14sp"
                        android:padding="8dp"
                        android:fontFamily="sans-serif-light"
                        android:text="Comments"
                        android:textAlignment="center" />


                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:padding="8dp"

                android:background="@drawable/circle">

                <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/profile_image"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/made"
                    app:civ_border_color="#FF000000" />
            </LinearLayout>


        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="16dp">

            <ImageView
                android:layout_width="100dp"

                android:layout_height="100dp"
                android:src="@drawable/ic_person_outline_black_24dp"
                android:visibility="invisible" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">


                    <TextView
                        android:id="@+id/name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorPrimary"
                        android:textStyle="bold"
                        android:text="Ramadhani Sadick"

                        android:textSize="16sp" />
                        <TextView
                            android:id="@+id/date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif-light"
                            android:text="I will make it"
                            android:paddingBottom="4dp"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/btnmore"
                        android:layout_width="wrap_content"
                        android:padding="4dp"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_more_24dp"/>
                </LinearLayout>


            </LinearLayout>
        </LinearLayout>


    </FrameLayout>

</android.support.v7.widget.CardView>

